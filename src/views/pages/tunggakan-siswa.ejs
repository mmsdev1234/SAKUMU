<div class="container-fluid p-0">
    <a href="/<%= menu %>/<%= sub %>" class="btn btn-danger badge rounded-pill fw-normal pe-3"><i class="bi bi-arrow-left-short me-2"></i>Kembali</a>
    <div class="row mt-3">
        <div class="col">
            <h5 class="mb-0"><%= title %></h5>
            <p class="p-0 m-0"><%= subtitle %></p>
        </div>
        <div class="col-sm-4 text-end">
            <form method="get" action="/penerimaan/<%= sub %>/tunggakan">
                <div class="row">
                    <div class="col-sm-3">
                        Filter :
                    </div>
                    <div class="col-sm">
                        <div class="input-group">
                            <input type="month" class="form-control form-control-sm" id="filter" name="filter" value="<%= filter %>" required>
                            <button type="submit" class="btn btn-primary btn-sm">Terapkan</button>
                        </div>
                    </div>
                </div>    
            </form>
        </div>
    </div>
    <hr>
    <table class="table table-bordered table-striped table-sm">
        <thead>
          <tr>
            <th scope="col" style="width: 7%;" class="text-center">No</th>
            <th scope="col" style="width: 20%;" class="text-center">NIS</th>
            <th scope="col" style="width: 55%;" class="text-center">Nama</th>
            <th scope="col" style="width: 18%;" class="text-center">Kelas</th>
          </tr>
        </thead>
        <tbody>
          <% for( let i = 0; i < list.length; i++ ) { %>
            <tr>
                <td class="text-center"><%= i+1 %></td>
                <td><%= list[i].nis %></td>
                <td><%= list[i].nama %></td>
                <td class="text-center"><%= list[i].kelas %> </td>
            </tr>
          <% } %>
        </tbody>
      </table>
</div>