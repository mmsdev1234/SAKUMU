<div class="container-fluid p-0">    
    <div class="row">
        <div class="col">
            <h5><%= title %></h5>
            <h6 class="fw-normal"><%= dess %></h6>
        </div>
        <div class="col-sm text-end me-3">    
            <form action="/pengeluaran/<%= sub %>" method="post">
                <div class="input-group">
                    <input type="text" class="form-control form-control-sm rounded-start" placeholder="Pencarian" aria-label="Pencarian" id="search" name="search">
                    <button class="btn btn-primary btn-sm rounded-end pe-2" type="submit"><i class="bi bi-search me-2"></i>Cari</button>
                </div>
            </form>  
            <div class="mt-3">
                <a href="/pengeluaran/<%= sub %>/add" class="btn btn-success badge rounded-pill fw-normal px-3"><i class="bi bi-plus-circle-fill me-2"></i>Tambah Data</a>
                <a href="/pengeluaran/<%= sub %>/all" class="btn btn-secondary badge rounded-pill fw-normal px-3 ms-2"><i class="bi bi-list-ul me-2"></i>Tampilkan semua</a>
                <% if(dbs == 1){%> 
                    <a href="/pengeluaran/<%= sub %>/tunggakan" class="btn btn-danger badge rounded-pill fw-normal px-3 ms-2"><i class="bi bi-clipboard-minus me-2"></i>Belum bayar</a>
                <% } %>    
            </div>  
        </div>
    </div>
    <hr>
    <% if(msg.length !== 0){%>
        <div class="alert alert-success" role="alert"><%= msg %></div>
    <% } %> 
    <div class="row">
        <div class="col">
            <div class="btn-group dropend">
                <button type="button" class="btn btn-sm btn-secondary dropdown-toggle btn-warning fw-bold" data-bs-toggle="dropdown" aria-expanded="false">
                  Keterangan
                </button>
                <ul class="dropdown-menu">
                  <% for (let i = 0; i < dkas.length; i++) { %>
                    <li><a class="dropdown-item disabled fw-bold" href="#"><span class="dot <%= dkas[i].ckas %>"></span> <%= dkas[i].nkas %></a></li>
                  <% } %> 
                </ul>
              </div>
        </div>
        <div class="col-sm-4 text-end me-3">
            <form method="get" action="/pengeluaran/<%= sub %>">
                <div class="row">
                    <div class="col-sm-3">
                        Filter :
                    </div>
                    <div class="col-sm">
                        <div class="input-group">
                            <input type="date" class="form-control form-control-sm" id="date" name="date" value="<%= filter %>" required>
                            <button type="submit" class="btn btn-primary btn-sm">Terapkan</button>
                        </div>
                    </div>
                </div>    
            </form>
        </div>
    </div>    
    <table class="table table-sm table-bordered table-striped mt-3">
        <thead>
            <tr>
              <th class="text-center" scope="col" style="width: 5%;">No</th>
              <th class="text-center" scope="col" style="width: 10%;">Tanggal</th>
              <th class="text-center" scope="col" style="width: 50%;">Uraian</th>
              <th class="text-center" scope="col" style="width: 20%;">Total</th>
              <th class="text-center" scope="col" style="width: 15%;">Aksi</th>
            </tr>
        </thead>
        <tbody> 
            <% for( let i = 0; i < data.length; i++ ) { %>
                <tr>
                    <th class="text-center" scope="row">2.<%= data[i].kd %>.<%= i+1 %> </th>
                    <td><%= data[i].tanggal %></td>
                    <td><%= data[i].uraian %></td>
                    <td><span class="dot <%= data[i].colors %> me-2"></span><%= data[i].totalrp %></td>
                    <td class="text-center">
                        <button type="button" class="btn badge btn-success fw-normal me-1" data-bs-toggle="modal" data-bs-target="#outDetail<%= data[i].no %>"><i class="bi bi-info-circle"></i></button>
                        <%- include('../modals/out-detail', {
                            data: data[i],
                            dess: dess
                        }) %> 
                        <a href="/pengeluaran/<%= sub %>/edit?id=<%= data[i].timestamp %>" class="btn badge btn-primary fw-normal"><i class="bi bi-pencil-square"></i></a>
                        
                    </td>
                </tr>
            <% } %>               
  
        </tbody>    
    </table>
    
</div>
  